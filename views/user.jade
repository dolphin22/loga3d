extends layout

block content
	.container
		nav.navbar.navbar-default.navbar-inverse
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type=button, 
												data-toggle='collapse',
												data-target='#topnav',
												aria-expanded='false')
						span.sr-only Toogle navigation
						span.icon-bar
					a.navbar-brand(href='/') Welcome to Loga3D!
				.collapse.navbar-collapse#topnav
					ul.nav.navbar-nav
						li
							a(href='/') Login
		
		.row
			.col-md-4.col-md-offset-4
				h1= title
				form(name='createuser', action='/user/create', method='post')
					.form-group
						label(for='fullname') Full Name
						input.form-control#fullname(name='fullname', type='text', placeholder='Full name')
					
					.form-group
						label(for='email') Email
						input.form-control#email(name='email', type='email', placeholder='Email address')
					
					.form-group
						label(for='password') Password
						input.form-control#password(name='password', type='password', placeholder='Password')
				
					input(type='submit', name='submit', value='Create')
